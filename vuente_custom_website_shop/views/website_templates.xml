<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<template id="end_panel" inherit_id="website_sale.products_categories" active="False" customize_show="True" name="3 Panel Layout">
  <xpath expr="//div[@id='products_grid']" position="after">
      <div id="products_grid_after" class="col-md-3 hidden-xs">
          
      </div>
  </xpath>

  <xpath expr="//div[@id='products_grid_before']" position="attributes">
      <attribute name="class">col-md-2 hidden-xs</attribute>
  </xpath>
  
  <xpath expr="//div[@id='products_grid']" position="attributes">
      <attribute name="class">col-md-7</attribute>
  </xpath>

  
</template>

<template id="end_panel_best_sellers" inherit_id="vuente_custom_website_shop.end_panel" active="False" customize_show="True" name="Top Selling Products">
  <xpath expr="//div[@id='products_grid_after']" position="inside">

      <div style="text-align:center;">
          <b>Best Selling Products</b><br/>
          <br/>
          <t t-foreach="top_products" t-as="top_product">
              <t t-esc="top_product.name"/><br/>
              <img t-att-src="website.image_url(top_product, 'image')" class="img-rounded mb8" t-attf-alt="#{top_product.name}" width="120"/><br/>
              $<t t-esc="top_product.list_price"/>
              <br/>
              <br/>
          </t>
      </div>
  </xpath>  
</template>

<template id="grid_reimage" inherit_id="website_sale.products_item" name="Square Image">
  <xpath expr="//a[@itemprop='url']" position="replace">
      <img t-att-src="website.image_url(product, 'image')" class="img-rounded mb8" t-attf-alt="#{product.name}" width="100"/>
  </xpath>


  <xpath expr="//section" position="attributes">
      <attribute name="style">padding-right:180px;</attribute>
  </xpath>

  <xpath expr="//div[@class='product_price']" position="before">
      <div class="text-info oe_subdescription">
        <div itemprop="description" t-field="product.mini_description"/>
      </div>
  </xpath>

</template>


    </data>
</openerp>
